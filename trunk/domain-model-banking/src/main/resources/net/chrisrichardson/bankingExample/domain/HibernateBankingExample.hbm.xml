<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="net.chrisrichardson.bankingExample.domain"
	default-access="field">

	<class name="Account" table="BANK_ACCOUNT">
		<id name="id" column="ACCOUNT_ID">
			<generator class="native" />
		</id>
		<property name="balance" column="BALANCE" />
		<component name="dateOpened">
			<property name="date" type="timestamp"/>
		</component>
		<property name="accountId" />
		<many-to-one name="overdraftPolicy" cascade="all"
			class="OverdraftPolicyImpl" />
	</class>

	<class name="OverdraftPolicyImpl" table="OVERDRAFT_POLICY">
		<id name="id">
			<generator class="native" />
		</id>

		<discriminator column="OVERDRAFT_TYPE" />

		<subclass name="NoOverdraftAllowed"
			discriminator-value="NONE">
		</subclass>
		<subclass name="LimitedOverdraft"
			discriminator-value="LIMITED">
			<property name="requiredYearsOpen"/>
			<property name="limit"/>
		</subclass>
	</class>

	<class name="TransferTransaction" table="BANKING_TRANSACTION">
		<id name="id">
			<generator class="native" />
		</id>
		<many-to-one name="fromAccount" />
		<many-to-one name="toAccount" />
		<property name="amount" />
		<property name="date" />
	</class>

	<query name="Account.findAccountByAccountId">
		from Account where accountId = :accountId
	</query>

</hibernate-mapping>

